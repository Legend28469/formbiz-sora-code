{
  "manifest_version": 3,
  "name": "FormBiz & SORA Automator",
  "version": "1.0",
  "description": "Automates workflow between FormBiz and SORA with tab reuse",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://formbiz.biz/*",
    "https://sora.chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Control Automation"
  },
  "content_scripts": [
    {
      "matches": [
        "https://formbiz.biz/*",
        "https://sora.chatgpt.com/*"
      ],
      "js": ["content-script.js"]
    }
  ]
}
